/*抛物线动画*/
.good_box {
  width: 18px;
  height: 18px;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: 1000;
  background: rgba(0, 133, 207, 1);
}


/* 删除按钮 */
.delete {
  width: 112rpx;
  min-height: 272rpx;
  background: #FF6868;
  border-radius: 0px 24rpx 24rpx 0px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  /* 关键代码 start */
  transform: translateX(150rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(150rpx);
  /* 关键代码 end */
}


/* 除删除按钮之外的其他部分 */
.item-left {
  /* 关键代码 start */
  width: 100%;
  padding: 0 20rpx;
  margin-left: -112rpx;
  transform: translateX(112rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(112rpx);
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ffffff;
  /* 关键代码 end */
}

/* 关键代码 start --> 向左滑动 */
.touch-move-active .item-left,
.touch-move-active .delete {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}