/* pages/daicai/index.wxss */
page {
    background: #F6F6F6;
    height: 100%;
    /* border: 1px solid red; */
}
/* tabs导航 */
.dc-tabs{
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
}
.dc-tabs>.dc-tabs-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 28rpx;
  padding-bottom: 16rpx;
}
.dc-tabs-item-text{
  font-size: 30rpx;
color: #333333;
}
.dc-tabs-item-line{
  width: 40rpx;
height: 8rpx;
background: #2362ED;
border-radius: 5rpx ;
margin-top: 12rpx;
opacity: 0;
}
.dc-tabs-item-active{
color:#2362ED ;
opacity: 1;
}
.type-box {
    display: flex;
    flex-direction: row;
    /* flex-wrap: wrap; */
    padding-top: 20rpx;
    background: #fff;
    width: 100%;
    overflow-x: auto;
    margin-bottom: 24rpx;
}

.type-box-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    box-sizing: border-box;
}

.type-box-item-image {
  overflow: hidden;
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    box-sizing: border-box;
}

.type-box-item-image>image {
    width: 100%;
    height: 100%;
}

.type-box-item-text {
    font-size: 26rpx;
    font-weight: 400;
    color: #333333;
    margin-top: 12rpx;
    /* height: 40rpx; */
    border-radius: 20rpx;
    text-align: center;
    /* line-height: 40rpx; */
    /* padding: 0 10rpx; */
    box-sizing: border-box;
    min-width: 128rpx;
}

.active {
    border: 1px solid #2362ED;
    color: #2362ED;
}

.goods-list {
    width: 100%;
    background: #fff;

}

.scroll-box {

    display: flex;
    flex-direction: row;
    padding-top: 20rpx;
}

.goos-type {
    position: sticky;
    width: 160rpx;
    background: #f6f6f6;
    height: 100%;
    top: 0;
}

.goods-type-item {
    width: 100%;
    height: 98rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.active-background {
    background-color: #fff;
}

.goods-type-item>text {
    font-size: 26rpx;
    font-weight: 400;
    color: #666666;
}

.goods-type-item>.border {
    width: 6rpx;
    height: 48rpx;
    background: #2362ED;
    border-radius: 0 8rpx 8rpx 0;
    position: absolute;
    left: 0;
}

.goods-type-item>.active-text {
    color: #333333;
}

.goods-box {
    flex: 1;
    margin-left: 20rpx;
    margin-right: 10rpx;
    /* margin-top: 32rpx; */
}

.goods-item {
    display: flex;
    flex-direction: row;
    /* align-items: center; */
    margin-bottom: 48rpx;
}

.goods-item>.goods-image {
    width: 164rpx;
    height: 164rpx;
    border-radius: 12rpx;
}

.goods-item-content {
    flex: 1;
    margin-left: 8rpx;
    width: 0;
    /* display: flex;
    flex-direction: column; */
}

.goods-item-content-title {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.goods-item-content-title>view {
    width: 72rpx;
    /* height: 32rpx; */
    border-radius: 20rpx;
    border: 1px solid #2362ED;
    text-align: center;
    /* line-height: 32rpx; */
    font-size: 24rpx;
    color: #2362ED;
}

.goods-item-content-title>text {
    font-size: 28rpx;
    font-weight: 500;
    color: #333333;
    flex: 1;
    white-space: nowrap;
    /* width: 100%;  */

    overflow: hidden;
    text-overflow: ellipsis;
    min-width: 0;
    margin-left: 8rpx;
}

.goods-item-content-des {

    margin-top: 12rpx;

    min-width: 0;


    /* min-width: 0; */
    /* width: 100%; */
    /* border: 1px solid red; */
    display: flex;
}

.goods-item-content-des>text {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
    font-weight: 500;
    color: #333333;
}

.goods-item-content-save {
    display: flex;
    flex-direction: row;
    margin-top: 12rpx;
}


.goods-item-content-save>view {
    /* width: 134rpx; */
    height: 32rpx;
    background: #FFF4ED;
    border-radius: 16rpx;
    text-align: center;
    color: #FF6200;
    font-size: 22rpx;
    padding: 0 16rpx;
}

.goods-item-content-save>text {
    flex: 1;
    margin-left: 16rpx;
    color: #FF6200;
    font-size: 22rpx;
}

.goods-item-content-price {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-top: 30rpx;
}

.goods-item-content-price>.cur-unit {
    color: #FF6200;
    font-size: 26rpx;
}

.goods-item-content-price>.cur-price {
    color: #FF6200;
    font-size: 32rpx;
}

.goods-item-content-price>.ori-price {
    font-size: 20rpx;
    font-weight: 400;
    color: #999999;
    flex: 1;
    margin-left: 8rpx;
}

.goods-box-type {
    display: flex;
    flex-direction: row;
    margin-bottom: 32rpx;
}

.goods-box-type>view {
    height: 64rpx;
    background: #F7F8FA;
    text-align: center;
    padding: 0 20rpx;
    line-height: 64rpx;
    color: #333333;
    font-size: 24rpx;
    margin-right: 24rpx;
}

.goods-box-type>.goods-type-active {
    background: #F3F7FE;
    color: #2362ED;
}

