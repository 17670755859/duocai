.order-item{
   width: 94%; 
   margin: 24rpx auto;
   display: flex;
   flex-direction: row;
   align-items: center;
}

.order-content{
    flex: 1;
    background: #FFFFFF;
border-radius: 24rpx;
margin-left: 16rpx;
padding-bottom: 32rpx;
}
.order-num{
    display: flex;
    flex-direction: row;
    padding: 32rpx 0 24rpx 0;
}
.order-num>.order-num-text1{
    font-size: 28rpx;
font-weight: 400;
color: #333333;
flex: 1;
margin-left: 24rpx;
}
.order-num>.order-num-text2{
    font-size: 28rpx;
font-weight: 400;
color: #333333;
}
.order-num>image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 24rpx;
}
.line{
    width: 100%;
    height: 32rpx;
}
.order-avatar{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.avatar{
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    margin-left: 24rpx;
}
.order-avatar-name{
    display: flex;
    flex-direction: column;
    margin-left: 24rpx;
}
.order-avatar-name>text{
    font-size: 32rpx;
font-weight: 500;
color: #333333;
}
.order-avatar-num{
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.order-avatar-num>text{
    font-size: 28rpx;
font-weight: 400;
color: #333333;
}
.order-avatar-num>text:nth-child(2){
    margin-left: 24rpx;
}
.order-avatar-num>text:nth-child(3){
    color: #FF6200;
}

.image-item{
    width: 124rpx;
height: 124rpx;
background: #FFFFFF;
border-radius: 12rpx ;
margin-left: 24rpx;
}