.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  /* height: 150rpx; */
  display: flex;
  flex-direction: row;
z-index: 100;


  height: 100rpx;
background: #fff;
box-shadow: 0px -10rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tabbarIphoneX{
  width: 100%;
  height: 50rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 33;
}
.tabbar-box{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items:flex-end ;
  justify-content: center;
  height: 100%;
}

.tabbar-item {
  flex: 1;
  text-align: center;
  overflow: hidden;
  box-sizing: border-box;
  /* padding: 8rpx 10rpx 0; */
  color: #333333;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* justify-content: space-between;  */
}

.tabbar-item-center{


  height: 100%;
}
.tabbar-item-icon{
  position: relative;
}
.tabbar-item-icon image {
  width: 48rpx;
  height: 48rpx;

}

.tabbar-item-text {
  font-size: 20rpx;
  padding-bottom: 10rpx;
  color: #999999;
}


.active {
  color: #2362ED !important;
}



.isIPX{
  padding-bottom: 50rpx !important;
}

.bar-image{
  width: 48rpx;
  height: 48rpx;
}

.release-image{
  width: 86rpx;
  height: 86rpx;
  margin-bottom: 10rpx;
  /* margin-top: 10rpx; */
}

.iphoneXPadding {
  padding-bottom: 68rpx;
}
.num{
  position: absolute;
  min-width: 32rpx;
  font-size: 24rpx;    background-color: #ee0a24;
  padding: 0 6rpx;
  height: 32rpx;
  color: #fff;
  border-radius: 32rpx;
  right: -38rpx;
  top: 0rpx;
}