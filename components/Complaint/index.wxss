.complaint{
  width: 90%;
  margin: 0 auto;
  overflow-x: hidden;
  padding-bottom: 32rpx;
}
.header{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.header>image{
  width: 104rpx;
height: 104rpx;
border-radius: 50%;
}
.header>text{
  font-size: 30rpx;
color: #333333;
margin-left: 32rpx;
}

.textarea{
  width: 100%;
  display: block;
  height: 258rpx;
background: #F7F7F7;
opacity: 1;
border-radius: 12rpx;
margin-top: 44rpx;
padding:20rpx;
font-size: 28rpx;
}
.tips{
  font-size: 30rpx;
color: #333;
margin: 40rpx auto;
display: block;
}

.list-image{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  /* padding-bottom: 20rpx; */
  flex-wrap: wrap;
}
.list-image>view {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  margin-right: 26rpx;
  margin-bottom: 26rpx;
  position: relative;
}
.list-image>view>.landlord-image {
  width: 100%;
  height: 100%;
}
.list-image video{
  width: 100%;
  height: 100%;
  /* border-radius: 12rpx; */
}
.list-image>view>.close{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: -10rpx;
  top: -13rpx;
}

.list-image>.add-image {
  background: #F7F7F7;

  display: flex;
  align-items: center;
  justify-content: center;
}
.list-image>.add-image >image{
  width: 40rpx;
  height: 40rpx;
}

.options{
  width: 100%;
  height: 88rpx;
background: #07C160;
opacity: 1;
border-radius: 44rpx;
text-align: center;
line-height: 88rpx;
font-size: 34rpx;
color: #FFFFFF;
margin-top: 60rpx;
}