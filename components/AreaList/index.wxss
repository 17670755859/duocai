@import '../../app.wxss';
@import '../../commen/form.wxss';


.chooseArea-mask {
  width: 100%;
  /* height: 1162rpx; */
  position: relative;
  display: flex;
  flex-direction: column;
}

.chooseArea-header {

  height: 92rpx;
  width: 94%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* position: absolute;
  top: 0;
  left:0; */
}

.chooseArea-header>text {

  color: #333;
  font-size: 30rpx;
  width: 33%;
  display: inline-block;
  /* line-height: 90rpx; */
  text-align: left;
  font-weight: 600;
}

.chooseArea-header>text:nth-child(1) {
  margin-left: 5rpx;
}

.chooseArea-header>.isChoosed {
  /* border-bottom: 1rpx solid #6084FF; */
  color: #07C160
}

.chooseArea-content {

  width: 94%;
  /* flex: 1; */
  /* overflow-y: auto; */
  margin: 0 auto;
  -webkit-overflow-scrolling: touch;
  height: 740rpx;
  /* border: 1px solid red; */
}

.chooseArea-content view {
  /* height: 90rpx; */
  border-bottom: 1rpx solid #F3F3F3;
  padding: 32rpx 0;

}

.chooseArea-content>view>text {
  color: #333;
  font-size: 28rpx;

}

.confirm-btn {
  /* color: #6084FF !important; */
  height: 88rpx;
background: rgba(7, 193, 96, 1);
opacity: 1;
border-radius: 44rpx;
color: #fff;
font-size:34rpx ;
text-align: center;
width: 94%;
margin: 20rpx auto;
line-height: 88rpx;
}

.options-btn {
  position: absolute;
  width: 25%;
  right: 0;
}