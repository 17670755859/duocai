/* components/chexiao/index.wxss */

.cx-box {
  /* width: 94%; */
  background: #ffffff;
  border-radius: 24rpx;
  padding-bottom: 32rpx;
}

.cx-title {
  font-size: 34rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 600;
  padding: 32rpx 0 0 42rpx;
  text-align: center;
}

.goods-box {
  /* height: 518rpx; */
  background: #F7F8FA;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  width: 92%;
  margin: 42rpx auto;
}

.order-id {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  border-bottom: 1px dashed #EEEEEE;
  padding-bottom: 38rpx;
}

.goods-list {
  margin-top: 38rpx;
}

.goods-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 24rpx;
}

.goods-item>.goods-item-image {
  width: 124rpx;
  height: 124rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
}

.goods-item-content {
  flex: 1;
  margin-left: 16rpx;
}

.goods-item-content-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.goods-item-content-title>text:nth-child(1) {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  flex: 1;
}

.goods-item-content-title>text:nth-child(2) {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.goods-item-content-price {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 24rpx;
}

.hj {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  justify-content: flex-end;
}

.hj>text:nth-child(1),
.hj>text:nth-child(2) {
  color: #333333;
  font-size: 26rpx;
}

.hj>text:nth-child(2) {
  margin-left: 6rpx;
}

.hj>text:nth-child(3) {
  font-size: 34rpx;
  color: #333333;

}

.options-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  align-items: center;
  justify-content: space-around;
}

.options-btn>view {
  flex: 1;
  margin-left: 24rpx;
  height: 88rpx;
  background: #F3F7FE;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 34rpx;
}

.options-btn>.cancel {
  background: #F3F7FE;
  color: #2362ED;
}

.options-btn>.confirm {
  background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
  color: #fff;
  margin-right: 24rpx;
}