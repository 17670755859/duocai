/* 采购申请详情，订单详情样式 */
page {
  background: #F7F8FA;
}
.container{
  padding-bottom: 40rpx;
}

.background{
  width: 100%;
  height: 200rpx;
/* background: linear-gradient(270deg, #2362ED 0%, #6191FD 100%); */
background: #2968ed;
border-radius: 0 0 32rpx 32rpx;
position: absolute;
top: 0 ;
left: 0;
z-index: -1;
}
.cg-box {
  width: 94%;
  margin: 0 auto;
}

.cg-title {
  width: 100%;
  /* width: 100%;
  height: 198rpx; */
  /* background: linear-gradient(270deg, #2362ED 0%, #6191FD 100%);
  border-radius: 0 0 32rpx 32rpx;
  position: absolute;
  top: 0;
  left: 0; */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.cg-title>image {
  width: 40rpx;
  height: 40rpx;
  /* margin-left: 24rpx; */
}

.cg-title>text {
  font-size: 36rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-left: 16rpx;
  flex: 1
}

.cg-title>.ckyy {
  width: 142rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 24rpx;
  text-align: center;
  line-height: 48rpx;
  color: #2362ED;
  font-size: 26rpx;
}

.detail-box {
  /* width: 94%; */
  margin: 32rpx auto 0;
}

.order {
  background: linear-gradient(180deg, #CEDDFF 0%, #FFFFFF 100%);
  /* height:178rpx; */
  border-radius: 0 0 24rpx 24rpx;
  padding: 36rpx 24rpx 40rpx;
}

.order-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order-title>view {
  width: 8rpx;
  height: 32rpx;
  background: #6191FD;
}

.order-title>text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-left: 20rpx
}

.order-num {
  font-size: 28rpx;
  color: #333333;
  margin-top: 24rpx;
}

.goods-info {
  margin-top: 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
}

.goods-title {
  display: flex;
  flex-direction: row;
}

.goods-title>view {
  width: 8rpx;
  height: 32rpx;
  background: #6191FD;
}

.goods-title>text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-left: 20rpx
}

.goods-item {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;

}

.goods-item-margin {
  margin-top: 40rpx;
}

.goods-item>text:nth-child(1) {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
  width: 120rpx;
}

.goods-item>text:nth-child(2) {
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  flex: 1;

}

.product-box {
  padding: 30rpx 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-top: 24rpx;
}

.product-item-margin {
  margin-top: 52rpx;
}

.product-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 48rpx;
}

.product-item-image {
  width: 184rpx;
  height: 184rpx;
  border-radius: 12rpx x;
}

.product-item-content {
  flex: 1;
  margin-left: 8rpx;
  width: 0;
}

.product-item-title {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.product-item-title>.dc {
  width: 72rpx;
  /* height: 32rpx; */
  border-radius: 16rpx;
  opacity: 1;
  border: 1px solid #2362ED;
  text-align: center;
  line-height: 32rpx;
  font-size: 24rpx;
  color: #2362ED;
}

.product-item-title>.title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  flex: 1;
  /* margin-left: 12rpx; */
}

.product-item-title>.num {
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}

.desc {
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  margin-top: 8rpx;
  white-space: nowrap;
  /* width: 100%;  */

  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

.save-price {
  font-size: 24rpx;
  color: #FF6200;
  margin-top: 12rpx;
}

.price-box {
  margin-top: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.cur-price {
  font-size: 32rpx;
  color:
      #FF6200
}

.ori-price {
  font-size: 20rpx;
  font-weight: 400;
  color: #999999;
  margin-left: 8rpx;
}

.options-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  box-shadow: 0px -2rpx 0px 1rpx #EEEEEE;
  align-items: center;
  justify-content: space-around;
  height: 120rpx;
  position: fixed;
  z-index: 2;
  bottom: 0;
  left: 0;
}

.options-btn>view {
  flex: 1;
  margin-left: 24rpx;
  height: 88rpx;
  background: #F3F7FE;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 34rpx;
}

.options-btn>.cancel {
  background: #F3F7FE;
  color: #2362ED;
}

.options-btn>.confirm {
  background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
  color: #fff;
  margin-right: 24rpx;
}
