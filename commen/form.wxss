.commen-view {
  width: 100%;
  margin: 20rpx auto 0;
  background: rgba(255, 255, 255, 1);
  /* box-shadow: 0px 3rpx 6rpx 0px rgba(96, 132, 255, 0.08); */
  border-radius: 20rpx;
  position: relative;
}



.commen-view-items {
  width: 100%;
  min-height: 106rpx;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #eef3f5;
  align-items: center;
  margin: 0 auto;
}

.commen-view-title {
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #eef3f5;
  line-height: 100rpx;
}

.commen-view-title>text {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-left: 20rpx;
}

.commen-view-items>text {
  font-size: 30rpx;
  /* font-weight:500; */
  color: rgba(51, 51, 51, 1);
  /* width: 120rpx; */
}

.commen-view-items-info {
  flex: 1;
  display: flex;
  flex-direction: row;
  margin-left: 43rpx;
  align-items: center;
}

.commen-view-items-info>text {
  flex:1;
  text-align: right;
  margin-left: 4rpx;
  font-size: 28rpx;
  margin-right: 46rpx;
}
.commen-view-items-info>.unit {
  flex:0!important;
  text-align: right;
  margin-left: 4rpx;
}
.picker-person-type {
  display: flex;
  flex-direction: row;
  flex: 1;
  position: relative;
  align-items: center;
}


.commen-view-items-info .picker {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.commen-view-items-info .picker>text {
  flex: 1;
}

.picker-image {
  /* position: absolute;
