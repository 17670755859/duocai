/* 联系团长样式 */

.concat-head {
  display: flex;
  flex-direction: row;
  border-top: 1px solid rgba(238, 238, 238, 1);
  padding: 32rpx 0;
  margin: 64rpx 24rpx 0;
}

.concat-head >.header {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.concat-head-box {
  flex: 1;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.concat-head-box>.name-box {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.name-box>.name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  flex: 1;
}

.name-box>image {
  width: 40rpx;
  height: 40rpx;
}

.name-box>.lxtz {
  font-size: 28rpx;
  margin-left: 8rpx;
  color: #333333;
}

.address {
  display: flex;
  align-items: center;
}

.address>image {
  width: 40rpx;
  height: 40rpx;
}

.address>text {
  margin-left: 4rpx;
  font-size: 26rpx;

  color: #333333;
}

/* 上传图片视频 */
.commen-view-items-media {
  width: 100%;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #eef3f5;
  margin: 0 auto;
  padding-bottom: 40rpx;
  padding: 32rpx 0;
}

.commen-view-items-media>text {
  /* margin-top: 33rpx; */
  font-size: 30rpx;
  color: #333333;
}


.commen-view-items-info-media {
  width: 100%;
  margin-top: 32rpx;
}

.media-list-image {
  display: flex;
  flex-direction: row;

  flex-wrap: wrap;
}

.media-list-image>.media-image {

  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;

  margin-right: 26rpx;
  margin-bottom: 26rpx;
  position: relative;
}

.media-list-image>view>.image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.media-list-image>view>.close {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  right: -10rpx;
  top: -13rpx;
}

