}

.items-picker view {
  flex: 1
}

.items-picker image {
  width: 14rpx;
  height: 24rpx;
}

.commen-view-items-info-address {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.commen-view-items-info-address>text {
  font-size: 28rpx;
  display: block;
  color: #333;
}

.commen-view-items-info-address>text:nth-child(1) {
  /* padding-top: 15rpx; */
}

.commen-view-items-info-address>text:nth-child(2) {
