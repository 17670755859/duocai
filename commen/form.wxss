  padding-bottom: 10rpx;
}

.commen-view-items-info .verfiy-code {
  width: 180rpx;
  height: 45rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(96, 132, 255, 1);
  border-radius: 23rpx;
  font-size: 24rpx;
  color: rgba(96, 132, 255, 1);
  line-height: 45rpx;
  text-align: center;
}

.commen-view-items-info>image {
  height: 40rpx;
  width: 40rpx;
  margin-left: 6rpx;
}

.commen-view-items-info-text {
  font-size: 28rpx;
  flex: 1;
  color: #333;
  text-align: right;
  margin-right: 46rpx;
}

.placeholder {
  font-size: 30rpx;
  color: #CCCCCC !important;
  flex: 1;
  text-align: right;
}


.picker-placeholder{
  font-size: 30rpx;
  color: #333333 !important;
  flex: 1;
  text-align: right;
}


