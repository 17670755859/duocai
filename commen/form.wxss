}

.commen-view-items-info .person-type {
  color: #6084ff;
  flex: 1;
  font-size: 28rpx;
}

.picker-reset-choice {
  width: 148rpx;
  height: 45rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(96, 132, 255, 1);
  border-radius: 23rpx;
  color: #6084ff;
  font-size: 24rpx;
  text-align: center;
  line-height: 43rpx;
}

.picker-reset-choice-owner {
  position: absolute;
