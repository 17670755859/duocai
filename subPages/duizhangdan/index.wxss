page {
  background: #F7F8FA;
}

.container {
  width: 100%;
  padding: 32rpx 24rpx;
  box-sizing: border-box;
  background: #fff;
}

.timer {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.timer>text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  padding-left: 24rpx;
}

.timer>image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

.dzd-box {
  border-radius: 24rpx;
  margin-top: 24rpx;
  position: relative;
}

.dzd-box image {
  width: 100%;
  height: 280rpx;
}

.dzd-price {
  position: absolute;
  top: 0;
  left: 0;
  /* width: 100%; */
  height: 100%;
  z-index: 2;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
  left: 24rpx;

}

.dzd-price .text1 {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.62);
}

.price {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.price>text {
  font-size: 64rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.price>view {
  height: 48rpx;
  background: rgba(255, 255, 255, 0.62);
  border-radius: 0 35rpx 35rpx 35rpx;
  text-align: center;
  line-height: 48rpx;
  padding: 0 20rpx;
  margin-left: 24rpx;

  font-size: 24rpx;
  font-weight: 400;
  color: #2362ED;

}

.price1 {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 28rpx;
}

.price1>text:nth-child(1),
.price1>text:nth-child(3) {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.62);
}

.price1>text:nth-child(2),
.price1>text:nth-child(4) {
  font-size: 28rpx;
  color: #fff;
  margin-left: 16rpx;
}

.price1>text:nth-child(3) {
  margin-left: 0.72rem;
}

.choose-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 24rpx auto;
}

.choose-box>.choose-box-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 44rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.choose-box-item>text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  padding-left: 24rpx;
}

.choose-box-item>image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

.choose-box>.choose-box-item:nth-child(1) {
  margin-left: 16rpx;
}

.choose-box>.choose-box-item:nth-child(2) {
  margin-left: 16rpx;
}
.order-detail{
  width: 100%;
  background: #fff; padding: 32rpx 0 24rpx;
  margin-bottom: 24rpx;
}
.type{
  display: flex;
  align-items: center;
 
}
.slog{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 56rpx;
  /* width: 155rpx; */
  padding: 0 24rpx 0 0;
border-radius: 0 28rpx 28rpx 0;
}
.dc{
  background: linear-gradient(270deg, #2362ED 0%, #6191FD 100%);
}
.slog>image{
  width: 48rpx;
  height: 48rpx;
}
.slog>text{
  font-size: 30rpx;
font-weight: 500;
color: #FFFFFF;
}
.order-info{
  flex: 1;
  display: flex;
  justify-content: space-around;
}
.order-info>.text1{
  font-size: 28rpx;
font-weight: 400;
color: #333333;
}
.order-info>view{
  text-align: center;
  margin-left: 24rpx;
  font-size: 28rpx;
font-weight: 400;
color: #333333;
}
.order-info .text3{
  color:
  #FF6200;margin-right: 24rpx;
}
.order-box{
  margin: 24rpx;
  background: #F7F8FA;
border-radius: 24rpx ;
padding: 24rpx;
box-sizing: border-box;
}
.order-num{
  display: flex;
  flex-direction: row;
  padding-bottom: 40rpx;
  border-bottom: 2rpx dashed #EEEEEE;
}
.order-num>text:nth-child(1){
  font-size: 30rpx;
font-weight: 500;
color: #333333;
}

.order-num>text:nth-child(2){
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
  text-align: right;
  flex: 1;
}
.order-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 24rpx;
}
.order-item-image{
  width: 124rpx;
  height: 124rpx;
}
.order-item-goods{
  margin-left: 24rpx;
  min-width: 0;
  flex: 1;
}
.order-item-goods>.title{
display: flex;
flex-direction: row;
min-width: 0;
}
.order-item-goods>.title>text:nth-child(1){
  font-size: 30rpx;
font-weight: 400;
color: #333333;
flex:1;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
min-width: 0;
}
.order-item-goods>.title>text:nth-child(2){
  font-size: 28rpx;
  font-weight: 400;
  color: #999999;
}
.order-price{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  padding-top: 24rpx;
}
.total{
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-end;
}
.total>text:nth-child(1){
  font-size: 26rpx;
font-weight: 400;
color: #333333;
}
.total>text:nth-child(2){
  font-size: 26rpx;
font-weight: 400;
color: #2362ED;
}
.total-price{
  display: flex;
  flex-direction: row;
  margin-top: 34rpx;
}
.total-price>text:nth-child(1){
  font-size: 30rpx;
font-weight: 400;
color: #333333;
flex: 1;
}
.total-price>text:nth-child(2){
  font-size: 30rpx;
font-weight: 500;
color: #333333;
}


.other-price {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 24rpx;
}

.other-price>image {
  width: 31rpx;
  height: 31rpx;
}

.other-price-title {
  margin-left: 16rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #999999;
  flex: 1;
}

.other-price-info {
  font-size: 30rpx;
  font-weight: 400;
  color: #999999;
}


