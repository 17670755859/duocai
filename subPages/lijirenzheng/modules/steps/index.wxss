}

.special-border-radius {
  border-radius: 4rpx 0 0 4rpx;
}
.special-border-radius-right{
  border-radius: 0 4rpx 4rpx 0
}

.step-num-num>view:nth-child(2) {
  width: 60rpx;
  height: 60rpx;
  background: #B3C4FF;
  border-radius: 50%;
  color: white;
  font-size: 32rpx;
  line-height: 60rpx;
  text-align: center;
}

.step-num>.step-num-line {
  height: 2rpx;
