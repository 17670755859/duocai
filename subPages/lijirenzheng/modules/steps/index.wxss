.step-view {
  width:83%;
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  padding-top: 23rpx;
  height: 80rpx;
}

.step-view>view {
  display: flex;
  flex-direction: column;
  position: relative;
  /* height: 110rpx; */
}

.step-view>.step-view-info {
  flex: 1;

}


.step-view-confirm-radius {
  border-radius: 0 4rpx 4rpx 0;
}

.step-view>view>text {
  font-size: 28rpx;
  color: #999999;
  display: block;
  /* margin-top: 17rpx; */
  position: absolute;
  left: -20rpx;
  bottom: 0rpx;
  width: 120rpx;
}
.step-view>view>.step-text-color{
  color: #333333;
}
.step-num {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

