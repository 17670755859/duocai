page{
    background: #F7F8FA;
  }

.header{
    width: 196rpx;
    height: 196rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 48rpx 0;
    margin: 0 auto;
}
.avatar{
  width: 196rpx;
  height: 196rpx;
  border-radius: 50%;
  border: 1rpx solid #eaeaea;
}
.camera{
position: absolute;
bottom: 40rpx;
right: 0;
width: 64rpx;
height: 64rpx;
}

.commen-view{
 background: #ffffff;
 border-radius: 24rpx;
 padding: 32rpx 24rpx 0;
 margin: 0 auto 24rpx;
 width: 94%;
 box-sizing: border-box;
}
.commen-view-title{
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 40rpx;
}
.commen-view-title>view{
    width: 8rpx;
height: 32rpx;
background: #6191FD;
}
.commen-view-title>text{
    font-size: 30rpx;
font-weight: 500;
color: #333333;
margin-left: 12rpx;
}

.commen-view-item{
    display: flex;
    flex-direction: row;
    border-bottom: 1rpx solid #EEEEEE;
    /* padding-bottom: 34rpx; */
    padding: 34rpx 0;
   
}
.commen-view-item-no{
    border: none;
}
.commen-view-item text{
    font-size: 30rpx;
font-weight: 400;
color: #333333;
}
.commen-view-item .text1{
    width: 120rpx;
}

.commen-view-item .text2{
    flex: 1;
}

.right{
    width: 40rpx;
    height: 40rpx;
}

.commen-view-item-role{
    display: flex;
    flex-direction: column;
    /* padding-bottom: 34rpx; */
    padding: 34rpx 0;
   
}
.commen-view-item-role text{
    font-size: 30rpx;
font-weight: 400;
color: #333333;
}

.role-list{
    margin-top: 24rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.role-list>view{
    min-width: 204rpx;
height: 64rpx;
background: #F3F3F3;
border-radius: 32rpx ;
text-align: center;
line-height: 64rpx;
box-sizing: border-box;
background: #F3F3F3;
color: #333333;
margin-right: 16rpx;
margin-bottom: 24rpx;
}
.role-list>.view-active{
    background: #F3F7FE;
border: 2rpx solid #2362ED;
color: #2362ED;
}
.confirm{
    width: 94%;
    margin: 28rpx auto 68rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    color: #ffffff;
    background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
border-radius: 44rpx ;


}

.text3 {
  text-align: right;
}