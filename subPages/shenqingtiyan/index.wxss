/* pages/order/index.wxss */

page {
  background: #F7F8FA;
}

.commen-view {
  width: 94%;
  margin: 24rpx auto;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx 0;
  box-sizing: border-box;
}

.commen-view-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 40rpx;
}

.commen-view-title>view {
  width: 8rpx;
  height: 32rpx;
  background: #6191FD;
}

.commen-view-title>text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-left: 12rpx;
}

.commen-view-items {
  width: 100%;
  min-height: 106rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #eef3f5;
  /* align-items: center; */
  margin: 0 auto 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.commen-view-item-label {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}

.commen-view-items-input {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 24rpx;
}

.commen-view-items-input input {
  flex: 1;
}

.commen-view-items-input .right {
  width: 40rpx;
  height: 40rpx;
}

.commen-view-item input {
  font-size: 24rpx;
  color: #333333;
  margin-top: 24rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;

}
.commen-view-image>image{
  width: 340rpx;
  height: 240rpx;
}
.commen-view-image-box{
  display: flex;
  flex-direction: row;
}
.confirm{
  width: 94%;
  margin: 24rpx auto;height: 88rpx;
  background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
  border-radius: 44rpx ;
  text-align: center;
  line-height: 88rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #FFFFFF;

}

.fuwurexian{
  font-size: 26rpx;
font-weight: 400;
color: #999999;
text-align: center;
margin: 56rpx auto 26rpx;
}
.commen-view-items-input-no{
  border: none;
}
.title{
  font-size: 41rpx;
font-weight: 500;
color: #333333;
text-align: center;
padding: 8rpx 0 50rpx;
}
.send-code{
  font-size: 30rpx;
font-weight: 400;
color: #2362ED;
}
.eye{
  width: 40rpx;
  height: 40rpx;
}
.radio-text1{
  font-size: 24rpx;
font-weight: 400;
color: #333333;
}
.radio-text2{
  font-size: 24rpx;
font-weight: 400;
color: #2362ED;
}
.radio{
  display: flex;
  flex-direction: row;
  margin: 30rpx auto;
  width: 94%;
 
