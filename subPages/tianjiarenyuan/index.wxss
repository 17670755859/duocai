/* pages/order/index.wxss */

page {
  background: #F7F8FA;
}

.container {
  padding-bottom: 120rpx;
}

.commen-view {
  width: 94%;
  margin: 24rpx auto;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx 0;
  box-sizing: border-box;
}

.commen-view-title {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 40rpx;
}

.commen-view-title>view {
  width: 8rpx;
  height: 32rpx;
  background: #6191FD;
}

.commen-view-title>text {
  font-size: 30rpx;
  font-weight: 500;
  color: #333333;
  margin-left: 12rpx;
}

.commen-view-items {
  width: 100%;
  min-height: 106rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #eef3f5;
  /* align-items: center; */
  margin: 0 auto 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #EEEEEE;
}

.commen-view-item-label {
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
}

.commen-view-items-input {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 24rpx;
}

.commen-view-items-input>.commen-view-items-input-text {
  flex: 1;
  font-size: 30rpx;
}

.active-chooice {
  color: #333333;
}

.active-no-chooice {
  color: #999999;
}

.commen-view-items-input-text {}

.commen-view-items-input input {
  flex: 1;
}

.commen-view-items-input .right {
  width: 40rpx;
  height: 40rpx;
}

.commen-view-item input {
  font-size: 24rpx;
  color: #333333;
  margin-top: 24rpx;
}

.radio-group {
  display: flex;
  flex-direction: row;

}

.commen-view-image>image {
  width: 340rpx;
  height: 240rpx;
}

.commen-view-image-box {
  display: flex;
  flex-direction: row;
}

.confirm {
  width: 94%;
  margin: 24rpx auto;
  height: 88rpx;
  background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 34rpx;
  font-weight: 400;
  color: #FFFFFF;

}

.fuwurexian {
  font-size: 26rpx;
  font-weight: 400;
  color: #999999;
  text-align: center;
  margin: 56rpx auto 26rpx;
}

.commen-view-items-input-no {
  border: none;
}


.mrbx {
  font-size: 30rpx;
  font-weight: 400;
  color: #CCCCCC;
  margin-top: 24rpx;
}

.mrbx-view {
  width: 204rpx;
  height: 64rpx;
  background: #F3F7FE;
  border-radius: 36rpx;
  opacity: 1;
  border: 2rpx solid #2362ED;
  text-align: center;
  line-height: 64rpx;
  color: #2362ED;
  font-size: 28rpx;
  margin-top: 24rpx;
}

.kx {
  font-size: 30rpx;
  font-weight: 400;
  color: #CCCCCC;
  margin-top: 40rpx;
}

.options-view {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.options-view .active {
  border: 2rpx solid #2362ED;
  color: #2362ED;
  background: #F3F7FE;
}

.options-view>view {
  width: 204rpx;
  height: 64rpx;
  background: #F3F3F3;
  border-radius: 32rpx;
  text-align: center;
  line-height: 64rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  margin-right: 16rpx;
  text-align: center;
  margin-bottom: 24rpx;
}


.save-btns {
  width: 100%;
  height: 110rpx;
  background: #FFFFFF;
  /* box-shadow: 0px -1px 0px #EEEEEE; */
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2
}

.save-btns>view {
  /* width: 342rpx; */
  width: 94%;
  margin: 0 auto;
  height: 88rpx;
  opacity: 1;
  font-size: 34rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;

  color: #fff;
  margin-left: 18rpx;
}

.save-btns>view:nth-child(1) {
  background: #F3F7FE;
  color: #2362ED;

}

.save-btns>view:nth-child(2) {
  background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
  color: #fff;

}