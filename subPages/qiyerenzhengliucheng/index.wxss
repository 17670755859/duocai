page {
    width: 100%;
    height: 100%;
}

.login-nav-back {
    width: 48rpx;
    height: 48rpx;
    /* margin-left: 24rpx; */
}

.nav-name {
    color: #FFFFFF;
}

.container {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    /* justify-content: center; */
    padding-top: 200rpx;
}

.login-back {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.login-tips {
    display: flex;
    flex-direction: column;
    margin-left: 24rpx;
}

.login-tips>text {
    font-size: 52rpx;
    font-family: PingFang SC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
}

.login-box {
    width: 92%;
    margin: 48rpx auto;
    background: #FFFFFF;
    border-radius: 24rpx;
    /* height: 400rpx; */
    padding: 56rpx 0;
}

.auth-steps {
    display: flex;
    flex-direction: row;
    width: 94%;
    margin: 0 auto;
}

.auth-num {
    font-size: 36rpx;
    font-weight: 600;
    color: #333333;
}

.auth-line {
    display: flex;
    flex-direction: column;
    margin-left: 16rpx;
    align-items: center;
}

.auth-line>.circle {
    width: 32rpx;
    height: 32rpx;
    background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
    border-radius: 50%;
}

.auth-line>.line {
    width: 1rpx;
    height: 123rpx;
    border-left: 1rpx solid #DDDDDD;
}

.line2 {
    padding-bottom: 40rpx;
}

.auth-info {
    flex: 1;
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    /* margin-top: -50rpx; */
}

.auth-info>text:nth-child(1) {
    font-size: 36rpx;
    font-weight: 600;
    color: #333333;
    margin-top: -4rpx;
}

.auth-info>text:nth-child(2) {
    font-size: 28rpx;
    font-weight: 400;
    color: #999999;
    margin-top: 16rpx;
}

.confirm {
    width: 88%;
    margin: 48rpx auto 0;
    height: 88rpx;
    background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
    border-radius: 44rpx;
    text-align: center;
    line-height: 88rpx;
    font-size: 34rpx;
    font-weight: 400;
    color: #FFFFFF;
}