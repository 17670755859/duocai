.options-btn {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
  box-shadow: 0px -2rpx 0px 1rpx #EEEEEE;
  align-items: center;
  justify-content: space-around;
  height: 120rpx;
  position: fixed;
  z-index: 1;
  bottom: 0;
  left: 0;
}

.options-btn>view {
  /* flex: 1; */
  width: 192rpx;
  margin-left: 24rpx;
  height: 72rpx;
  background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
  border-radius: 36rpx ;
  border-radius: 44rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #fff;
  margin-right: 24rpx;
}


.options-btn>.text1{
  color: #333333;
  font-size: 24rpx;
  margin-left: 24rpx;
}
.options-btn>.text2{
  color: #FF6200;
  font-size: 26rpx;
}
.options-btn>.text3{
  color: #FF6200;
  font-size: 34rpx;
  font-weight: 600;
}
.options-btn>.text4{
  color: #FF6200;
  font-size: 26rpx;
  margin-left: 10rpx;
  flex: 1;
}
