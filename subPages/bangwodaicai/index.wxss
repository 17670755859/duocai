}

.media-list-image {
  display: flex;
  flex-direction: row;

  flex-wrap: wrap;
}

.media-list-image>.media-image {

  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;

  margin-left: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.media-list-image>view>.image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.media-list-image>view>.close {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  right: -10rpx;
  top: -13rpx;
}

