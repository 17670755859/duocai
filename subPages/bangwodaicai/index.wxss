  top: 0;
  left: 0;
  z-index: -1;
}
.introduce{
  display: flex;
  flex-direction: column;
  width: 94%;
  margin: 0 auto;
  padding-top: 60rpx;
}
.introduce>text:nth-child(1){
  font-size: 40rpx;
font-weight: 500;
color: #FFFFFF;
}
.introduce>text:nth-child(2){
  font-size: 30rpx;
  color: rgba(255,255,255,0.6);
  margin-top: 32rpx;
}
.commen-box{
  width: 94%;
  margin: 0 auto;
  background: #FFFFFF;
  border-radius: 24rpx;
  margin-top: -60rpx;
  padding: 40rpx 24rpx;
  box-sizing: border-box;
}
.commen-view{
  display: flex;
  flex-direction: column;
  margin-bottom: 64rpx;
}
.commen-view>text{
  font-size: 30rpx;
font-weight: 400;
color: #333333;
}
.commen-view textarea{
  background: #F7F8FA;
border-radius: 24rpx;
padding: 24rpx;
margin-top: 24rpx;
/* width: 100%; */
width: 92%;
font-size: 30rpx;
color: #333333;
}
.commen-view input{
  margin-top: 24rpx;
}
.bcxx{
  /* width: 100%; */
