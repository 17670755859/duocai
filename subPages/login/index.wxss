page{
    width: 100%;
    height: 100%;

}
.login-nav-back{
    width: 48rpx;
    height: 48rpx;
    /* margin-left: 24rpx; */
}
.nav-name{
    color: #FFFFFF;
}
.container{
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    /* justify-content: center; */
    padding-top: 200rpx;
}
.login-back{
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.login-tips{
    display: flex;
    flex-direction: column;
    margin-left: 24rpx;
}
.login-tips>text{
    font-size: 52rpx;
font-family: PingFang SC-Medium, PingFang SC;
font-weight: 500;
color: #FFFFFF;
}

.login-box{
    width: 92%;
    margin: 48rpx auto;
    background: #FFFFFF;
    border-radius: 24rpx;
    /* height: 400rpx; */
    padding: 56rpx 0;
}
.login-item{
    display: flex;
    flex-direction: column;
    width: 94%;
    margin: 0 auto;
    margin-bottom: 48rpx;
}
.login-item>text{
    font-size: 36rpx;
font-weight: 600;
color: #333333;
}
.login-item>.login-item-input{
    display: flex;
    flex-direction: row;
    margin-top: 24rpx;
    border-bottom: 1rpx solid #EEEEEE;
}
.login-item-input>input{
    flex: 1;
    
    font-size: 30rpx;
    color: #333333;
    padding-bottom: 24rpx;
}
.login-item-input>image{
    width: 40rpx;
    height: 40rpx;
}
.confirm{
    width: 88%;
    margin: 48rpx auto 0;
    height: 88rpx;
background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
border-radius: 44rpx ;
text-align: center;
line-height: 88rpx;
font-size: 34rpx;
font-weight: 400;
color: #FFFFFF;
}

