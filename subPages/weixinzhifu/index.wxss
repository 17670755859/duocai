page{
  background: #F7F8FA;
}
.container{
  background: #fff;
  margin: 24rpx ;
  border-radius: 24rpx;
  padding: 48rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.text1{
  font-size: 30rpx;
font-weight: 500;
color: #333333;
}
.text2{
  font-size: 70rpx;
font-weight: 600;
color: #333333;
margin-top: 40rpx;
}
.text3{
  font-size: 24rpx;
font-weight: 400;
color: #333333;
margin-top: 16rpx;
}
.box{
  width: 94%;
  margin: 64rpx 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.content{
  flex: 1;
  height: 188rpx;
  background: #EAF1FB;
  border-radius: 24rpx ;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content:nth-child(2){
  margin-left: 24rpx;
}
.content>text:nth-child(1){
  font-size: 24rpx;
font-weight: 400;
color: #333333;
}
.content>text:nth-child(2){
  font-size: 46rpx;
  font-weight: 400;
  color: #333333;
  margin-top: 24rpx;
}
.option{
margin: 64rpx auto;
width: 94%;
display: flex;
flex-direction: row;

}
.option>view{
  flex: 1;
  height: 88rpx;
background: #F3F7FE;
border-radius: 44rpx ;
font-size: 34rpx;
font-weight: 400;
text-align: center;
line-height: 88rpx;
}
.option>view:nth-child(1){
  font-size: 34rpx;
font-weight: 400;
color: #2362ED;
background: #F3F7FE;
}
.option>view:nth-child(2){
  font-size: 34rpx;
font-weight: 400;
color: #fff;
background: linear-gradient(312deg, #2362ED 0%, #6191FD 100%);
margin-left: 24rpx;
}